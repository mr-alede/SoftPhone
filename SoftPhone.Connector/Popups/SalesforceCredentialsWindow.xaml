<Window x:Class="SoftPhone.Connector.Popups.SalesforceCredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftPhone.Connector.Popups"
        mc:Ignorable="d" ResizeMode="NoResize" Loaded="Window_Loaded"
        Title="Salesforce Credentials" Height="524.98" Width="395.666">

	<Grid Background="{StaticResource AppBackground}" HorizontalAlignment="Left" Width="390" Margin="0,0,0,-2">
		<Grid.RowDefinitions>
			<RowDefinition Height="390*"/>
		</Grid.RowDefinitions>
		<Canvas Margin="0,0,390,0" Grid.RowSpan="2">
			<TextBox Canvas.Left="55" TextWrapping="NoWrap" Canvas.Top="62" x:Name="Login" FontSize="20" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="270" Height="28"/>
			<TextBlock Canvas.Left="55" FontSize="30" TextWrapping="Wrap" Text="Login" Canvas.Top="17" Foreground="#FFECAD25"/>
			<PasswordBox Canvas.Left="55" Canvas.Top="149" x:Name="Password" Width="270" Height="28" FontSize="20" />
			<TextBlock Canvas.Left="55" TextWrapping="Wrap" Text="Password" FontSize="30" VerticalAlignment="Center" Canvas.Top="104" Foreground="#FFECAD25"/>
			<TextBox Canvas.Left="55" TextWrapping="NoWrap" Canvas.Top="234" x:Name="Token" FontSize="20" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="270" Height="28"/>
			<TextBlock Canvas.Left="55" FontSize="30" TextWrapping="Wrap" Text="Token" Canvas.Top="189" Foreground="#FFECAD25"/>

			<TextBlock Canvas.Left="55" FontSize="30" TextWrapping="Wrap" Text="Instance" Canvas.Top="282" Foreground="#FFECAD25"/>
			<ComboBox Canvas.Left="55" Canvas.Top="327" x:Name="Instance" FontSize="18" VerticalAlignment="Center" 
													RenderTransformOrigin="0.5,0.5" Width="270" Height="28"
													SelectedItem="{Binding Path=InstanceName}">
			</ComboBox>

			<Button x:Name="save" Content="Save" Click="save_Click" FontSize="25"  Canvas.Top="402" Canvas.Left="118" Height="62" Width="154" Foreground="#FFECAD25"></Button>
		</Canvas>
	</Grid>
</Window>
